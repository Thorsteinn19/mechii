#include <avr/io.h>
#include <avr/interrupt.h>
#include "PWMSERVO/delay.h"
#include "PWMSERVO/serial.h"
#include "PWMSERVO/servo.h"


int main(){
	Init_Uart();
	servo1_init();
	sei();

	for (;;) // Loop forever
	{
	      while ((UCSR0A & (1 << RXC0)) == 0) {}; // Do nothing until data have been received and is ready to be read from UDR
	      char ReceivedByte = UDR0; // Fetch the received byte value into the variable "ByteReceived"
	      if (ReceivedByte == '1'){
	      servoduty1= 10;
	      }
	      else servoduty1 = 50;
	      while ((UCSR0A & (1 << UDRE0)) == 0) {}; // Do nothing until UDR is ready for more data to be written to it
	      UDR0 = servoduty1; // Echo back the received byte back to the computer
	   }

return 0;
}

