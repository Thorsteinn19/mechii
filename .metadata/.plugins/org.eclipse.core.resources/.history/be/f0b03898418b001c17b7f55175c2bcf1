#include <avr/io.h>
#include <avr/interrupt.h>

#include "serial.h"
#include "delay.h"


#define BUAD 9600
#define BRC ((F_CPU/16/BUAD)-1)
char servoduty1;
char servoduty2;
char dccommand;
char cRx;

void Init_Uart(){

/*
	UBRR0H=(BRC>>8);
	UBRR0L= BRC;

	UCSR0B= (1<<RXEN0)| (1<<RXCIE0)|(1<<TXEN0)|(1<<TXCIE0);
	//UCSR0C=(1<<USBS0)|(3<<UCSZ00) ;
    UCSR0C =*/
        /* no parity bit */
   //     (0 << UPM01) |
   //     (0 << UPM00) |
        /* asyncrounous USART */
    //    (0 << UMSEL01) |
    //    (0 << UMSEL00) |
        /* one stop bit */
   //     (0 << USBS0) |
        /* 8-bits of data */
   //    (1 << UCSZ01) |
   //     (1 << UCSZ00);
	UBRR0H=0;
	UBRR0L = 16;
	UCSR0B=(1<<RXEN0)|(1<<TXEN0)|(1<<RXCIE0);
	UCSR0C=(1<<USBS0)|(3<<UCSZ00);
	sei();
}

ISR(USART_RX_vect){

	cRx=UDR0;
	UDR0=cRx; //echo the signal back
}




void setservocycle(char data){
	if((data &= 0x40) == 0x40){
		if((data<=0x32)&&(data>=0)){
		servoduty1=(data &= 0x3F);}
		else{

			servoduty1=0x32;
		}
	}
	if((data<=0x32)&&(data>=0)){
			servoduty2=(data &= 0x3F);}
			else{

				servoduty2=0x32;
			}
}

void setdccommand(char command){
	dccommand= command;
}


